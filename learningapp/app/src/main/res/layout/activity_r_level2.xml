            android:layout_width="664dp"
            android:layout_height="108dp"
            android:background="@drawable/x1"
            android:text="@string/q6"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroupQ5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/linearLayout4"
            android:layout_alignRight="@+id/linearLayout4"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            >

            <RadioButton
                android:id="@+id/radioButton1Q5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:text="@string/q6a1" />

            <RadioButton
                android:id="@+id/radioButton2Q5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radioButton"
                android:text="@string/q6a2" />

            <RadioButton
                android:id="@+id/radioButton3Q5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
