            android:layout_height="68dp"
            android:background="@drawable/x1"
            android:text="@string/q4"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroupQ3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/linearLayout4"
            android:layout_alignRight="@+id/linearLayout4"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            >

            <RadioButton
                android:id="@+id/radioButton1Q3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:text="@string/q4a1" />

            <RadioButton
                android:id="@+id/radioButton2Q3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radioButton"
                android:text="@string/q4a2" />

            <RadioButton
                android:id="@+id/radioButton3Q3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radioButton2"
                android:text="@string/q4a3" />

            <RadioButton
                android:id="@+id/radioButton4Q3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radioButton3"
                android:layout_alignStart="@+id/radioButton3"
                android:layout_alignLeft="@+id/radioButton3"
                android:text="@string/q4a4" />
        </RadioGroup>

        <TextView
